{
  "name": "functions",
  "version": "1.0.0",
  "description": "Unified TypeScript Firebase Functions backend for Penny Platform",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "clean": "rimraf lib",
    "deploy": "npm run build && firebase deploy --only functions",
    "serve": "npm run build && firebase emulators:start --only functions,firestore",
    "watch": "tsc --project tsconfig.json --watch"
  },
  "keywords": [
    "firebase",
    "cloud-functions",
    "typescript"
  ],
  "author": "Penny Platform",
  "license": "Apache-2.0",
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "deepinfra": "^2.0.2",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "google-auth-library": "^10.5.0",
    "openai": "^6.8.1",
    "weaviate-client": "^3.9.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "rimraf": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
