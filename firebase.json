{
  "apphosting": [
    {
      "backendId": "penni-ai-platform-backend",
      "rootDir": "/",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "functions",
        "penni-chatbot",
        "chatbot-function"
      ]
    }
  ],
  "emulators": {
    "apphosting": {
      "startCommand": "bun run --bun dev",
      "rootDirectory": "./",
      "port": 5002,
      "host": "127.0.0.1"
    },
    "firestore": {
      "port": 6201
    },
    "ui": {
      "enabled": true,
      "port": 6202
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9100
    },
    "singleProjectMode": true
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
