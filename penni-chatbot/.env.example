# Google Cloud + Vertex AI
GOOGLE_CLOUD_PROJECT=penni-ai-platform
GOOGLE_CLOUD_REGION=us-central1
VERTEX_MODEL=gemini-2.5-flash-preview-09-2025

# Cloud SQL PostgreSQL
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_DB=penni-chatbot-db
POSTGRES_USER=penni_chatbot_user
POSTGRES_PASSWORD=change-me
# Optional Cloud SQL connection name (project:region:instance)
CLOUD_SQL_CONNECTION_NAME=
POSTGRES_POOL_MIN=1
POSTGRES_POOL_MAX=10

# Firestore / Firebase
FIRESTORE_PROJECT_ID=penni-ai-platform
GOOGLE_APPLICATION_CREDENTIALS=/workspace/service-account.json
FIREBASE_PROJECT_ID=penni-ai-platform

# API server
API_HOST=0.0.0.0
API_PORT=8080
CORS_ORIGINS=https://penni-ai.com,http://localhost:5002
LOG_LEVEL=INFO
CHATBOT_SERVICE_NAME=penni-chatbot

# LangSmith (optional - for monitoring and observability)
# Set LANGSMITH_TRACING=true to enable tracing
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=

# Local development helpers
# Copy this file to .env and customize per-environment. Never commit secrets.
